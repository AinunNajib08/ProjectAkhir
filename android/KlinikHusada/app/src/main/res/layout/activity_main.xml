<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="15dp"
        android:text="Vers 1.0"
        android:fontFamily="@font/robotoregular"
        android:textStyle="italic"
        android:textSize="13dp"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:src="@drawable/backgroundimages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="60dp"
        android:text="Selamat Datang di"
        android:fontFamily="@font/robotobold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="0dp"
        android:text="Klinik Husada Mulia"
        android:fontFamily="@font/robotoregular"
        android:textSize="27dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="63dp"
        android:text="Mulai"
        android:textSize="22dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:fontFamily="@font/robotoregular"
        android:layout_gravity="center"
        android:background="@drawable/buttondata"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:onClick="kedua"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>